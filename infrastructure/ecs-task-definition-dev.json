{
    "family": "festivos-api",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::251221985158:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::251221985158:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "festivos-api",
            "image": "251221985158.dkr.ecr.us-east-1.amazonaws.com/festivos-api:latest",
            "cpu": 256,
            "memory": 512,
            "memoryReservation": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "SPRING_PROFILES_ACTIVE",
                    "value": "aws"
                },
                {
                    "name": "SERVER_PORT",
                    "value": "8080"
                },
                {
                    "name": "MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE",
                    "value": "health,info"
                },
                {
                    "name": "SPRING_DATASOURCE_URL",
                    "value": "jdbc:postgresql://dev-festivos-postgres.c8fk4quwch2q.us-east-1.rds.amazonaws.com:5432/festivos"
                },
                {
                    "name": "SPRING_DATASOURCE_USERNAME",
                    "value": "festivos_user"
                }
            ],
            "secrets": [
                {
                    "name": "SPRING_DATASOURCE_PASSWORD",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:251221985158:secret:dev-festivos-db-password-XXXXXX"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/festivos-api",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
